<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Define log directory -->
    <property name="LOG_DIR" value="logs"/>

    <!-- Timestamp for unique log file per run -->
    <timestamp key="startTimestamp" datePattern="yyyy-MM-dd_HH-mm-ss"/>

    <!-- Console appender with colored output and correlation ID -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%-5level) [%thread] [%X{correlationId:-NO_CORR}] %cyan(%logger{36}) - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender for current run (timestamped) -->
    <appender name="FILE_CURRENT_RUN" class="ch.qos.logback.core.FileAppender">
        <file>${LOG_DIR}/civic-connect_${startTimestamp}.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] [%X{correlationId:-}] [%X{userId:-}] [%X{source:-api}] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Rolling file appender for daily logs -->
    <appender name="FILE_ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/civic-connect.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/archived/civic-connect_%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] [%X{correlationId:-}] [%X{userId:-}] [%X{source:-api}] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Loki Appender for centralized logging -->
    <appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">
        <http>
            <url>http://localhost:3100/loki/api/v1/push</url>
        </http>
        <format>
            <label>
                <pattern>app=civic-connect-api,env=local,level=%level,logger=%logger{36}</pattern>
            </label>
            <message>
                <pattern>{"timestamp":"%d{yyyy-MM-dd'T'HH:mm:ss.SSS'Z'}","level":"%level","thread":"%thread","correlationId":"%X{correlationId:-}","userId":"%X{userId:-}","source":"%X{source:-api}","logger":"%logger{36}","message":"%msg","exception":"%ex{full}"}</pattern>
            </message>
            <sortByTime>true</sortByTime>
        </format>
    </appender>

    <!-- Async wrapper for Loki to prevent blocking -->
    <appender name="ASYNC_LOKI" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="LOKI"/>
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <neverBlock>true</neverBlock>
    </appender>

    <!-- Separate file for issue-related logs -->
    <appender name="FILE_ISSUES" class="ch.qos.logback.core.FileAppender">
        <file>${LOG_DIR}/issues_${startTimestamp}.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] [%X{correlationId:-}] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Separate file for councillor/representative lookup logs -->
    <appender name="FILE_COUNCILLOR" class="ch.qos.logback.core.FileAppender">
        <file>${LOG_DIR}/councillor_${startTimestamp}.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] [%X{correlationId:-}] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Separate file for geocoding logs -->
    <appender name="FILE_GEOCODING" class="ch.qos.logback.core.FileAppender">
        <file>${LOG_DIR}/geocoding_${startTimestamp}.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] [%X{correlationId:-}] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger for external client logs (Android, React Admin Panel) -->
    <logger name="EXTERNAL" level="DEBUG" additivity="true">
        <!-- External logs go to Loki via root appender -->
    </logger>

    <!-- Logger for Issue Service -->
    <logger name="com.civicconnect.api.service.IssueService" level="DEBUG" additivity="true">
        <appender-ref ref="FILE_ISSUES"/>
    </logger>

    <!-- Logger for Ward Councillor Service -->
    <logger name="com.civicconnect.api.service.WardCouncillorService" level="DEBUG" additivity="true">
        <appender-ref ref="FILE_COUNCILLOR"/>
    </logger>

    <!-- Logger for Geocoding Service -->
    <logger name="com.civicconnect.api.service.GeocodingService" level="DEBUG" additivity="true">
        <appender-ref ref="FILE_GEOCODING"/>
    </logger>

    <!-- Logger for Location Controller -->
    <logger name="com.civicconnect.api.controller.legacy.LegacyLocationController" level="DEBUG" additivity="true">
        <appender-ref ref="FILE_COUNCILLOR"/>
    </logger>

    <!-- Application package logging -->
    <logger name="com.civicconnect" level="DEBUG"/>

    <!-- Spring framework logging (less verbose) -->
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.hibernate" level="WARN"/>
    <logger name="org.hibernate.SQL" level="DEBUG"/>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE_CURRENT_RUN"/>
        <appender-ref ref="FILE_ROLLING"/>
        <appender-ref ref="ASYNC_LOKI"/>
    </root>
</configuration>
